{
  "name": "Weaverse Navigator",
  "description": "Open IDE from Weaverse Studio",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_icon": "images/hello_extensions.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["https://studio.weaverse.io/*"],
    "js": ["scripts/content.js"]
  }],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "permissions": [
    "nativeMessaging",
    "storage"
  ]


}